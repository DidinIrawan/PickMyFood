<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">
    <action
        android:id="@+id/action_global_to_loginFragment"
        app:destination="@+id/loginFragment"/>
    <action
        android:id="@+id/action_global_to_homeFragment"
        app:destination="@+id/homeFragment"/>
    <action
        android:id="@+id/action_global_to_restoListFragment"
        app:destination="@+id/restoListFragment"/>
    <action
        android:id="@+id/action_global_to_walletFragment"
        app:destination="@+id/walletActivity"/>
    <action
        android:id="@+id/action_global_to_userProfileFragment"
        app:destination="@+id/userProfileFragment"/>
    <action
        android:id="@+id/action_restoListFragment_to_restoMenuListActivity2"
        app:destination="@id/restoMenuListActivity2" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.project.pickmyfood.screens.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/restoListFragment"
        android:name="com.project.pickmyfood.screens.list.RestoListFragment"
        android:label="fragment_resto_list"
        tools:layout="@layout/fragment_resto_list" >

    </fragment>
    <activity
        android:id="@+id/restoMenuListActivity2"
        android:name="com.project.pickmyfood.activity.RestoMenuListActivity"
        android:label="activity_resto_menu_list"
        tools:layout="@layout/activity_resto_menu_list" />
    <activity
        android:id="@+id/walletActivity"
        android:name="com.project.pickmyfood.activity.WalletActivity"
        android:label="activity_wallet"
        tools:layout="@layout/activity_wallet" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.project.pickmyfood.screens.user.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />
</navigation>